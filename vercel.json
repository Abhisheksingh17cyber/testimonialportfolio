{
  "version": 2,
  "framework": "create-react-app",
  "buildCommand": "cd adam-portfolio && CI=false npm run build",
  "outputDirectory": "adam-portfolio/build",
  "installCommand": "cd adam-portfolio && npm install",
  "env": {
    "CI": "false"
  },
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
